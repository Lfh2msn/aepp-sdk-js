{
  // custom options for ts-node to run mocha tests
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "outDir": "./es",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "declaration": true,
    "allowJs": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
}
